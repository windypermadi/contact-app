            android:theme="@style/Theme.YestodoPersonal.Fullscreen" />
        <activity
            android:name=".ui.auth.LupaSandiActivity"
            android:exported="true" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="true" />
        <activity
