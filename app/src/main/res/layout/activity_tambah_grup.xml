<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.grup.tambah.TambahGrup">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="2dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/custom_toolbar_b2c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_reguler"
                    android:paddingBottom="5dp"
                    android:text="Nama Grup"
                    android:textColor="@color/blackSoft"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edititext"
                    android:fontFamily="@font/font_reguler"
                    android:hint="Masukkan Nama Grup"
                    android:inputType="textCapSentences"
                    android:padding="12dp"
                    android:textColor="@color/blackSoft"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/font_reguler"
                    android:paddingBottom="5dp"
                    android:text="Deskripsi Grup"
                    android:textColor="@color/blackSoft"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/et_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edititext"
                    android:fontFamily="@font/font_reguler"
                    android:hint="Masukkan Deskripsi Grup"
                    android:minLines="5"
                    android:padding="12dp"
                    android:textColor="@color/blackSoft"
                    android:textSize="@dimen/fontsize15"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_reguler"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="5dp"
                        android:text="Foto Profil Grup"
                        android:textColor="@color/blackSoft"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_primary"
                        android:fontFamily="@font/font_reguler"
                        android:padding="10dp"
                        android:paddingBottom="5dp"
                        android:text="Unggah"
                        android:textColor="@color/white"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/btn_background_grey"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_add"
                        android:tint="@color/colorGrey" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/font_reguler"
                        android:paddingBottom="5dp"
                        android:text="Anggota Grup"
                        android:textColor="@color/blackSoft"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_pilih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_primary"
                        android:fontFamily="@font/font_reguler"
                        android:padding="10dp"
                        android:paddingBottom="5dp"
                        android:text="Pilih"
                        android:textColor="@color/white"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_primary"
        android:fontFamily="@font/font_reguler"
        android:gravity="center"
        android:padding="10dp"
        android:paddingBottom="5dp"
        android:text="Buat Grup"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />
</RelativeLayout>