<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_reguler"
            android:text="Membuat fitur kontak pada Yes To Do B2C"
            android:textColor="@color/blackSoft"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_comment"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/footer"
            android:src="@drawable/ic_comment"
            app:tint="@color/greyButton" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/ic_comment"
            android:fontFamily="@font/font_reguler"
            android:text="2"
            android:textColor="@color/greyButton" />

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_date"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_date"
                app:tint="@color/greyButton" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/ic_date"
                android:fontFamily="@font/font_reguler"
                android:text="12 November 2021"
                android:textColor="@color/greyButton"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_time"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/text_date"
                android:src="@drawable/ic_time"
                app:tint="@color/greyButton" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/ic_time"
                android:fontFamily="@font/font_reguler"
                android:text="11.00 WIB"
                android:textColor="@color/greyButton"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_pindah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_primary"
                android:fontFamily="@font/font_reguler"
                android:padding="8dp"
                android:text="Pindahkan"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>